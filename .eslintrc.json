{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"ecmaFeatures": {
			"impliedStrict": true,
			"experimentalObjectRestSpread": true,
			"jsx": true
		},
		"sourceType": "module"
	},

	"env": {
		"browser": true,
		"node": true,
		"jest": true
	},

	"extends": "airbnb",

	"rules": {
		"indent": ["error", "tab", {
			"ignoredNodes": ["TemplateLiteral > *"]
		}],
		"no-tabs": 0
	}
}